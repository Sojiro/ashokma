$main-color = #29C6CD
$gradient-color-1 = #36B1DA
$gradient-color-2 = #29C6CD
$main-font = Helvetica, -apple-system, BlinkMacSystemFont, "Segoe UI", Arial, sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol"

@import "partial/_base.styl"
@import "partial/_content.styl"
@import "partial/_highlight.styl"

b, strong
 font-weight: bold

li:before
 content: '\1F31F'
 margin-left: -23px
 margin-right: 10px
 color: rgb(0,0,0)

code
 background: #efefef;
 box-shadow: 0 2px 0 rgba(84,94,111,.4);
 padding: 0 6px 2px;
 border-radius: 5px;
 color: #3cbbb0;
 font-weight: 500;
 margin: 0;
 letter-spacing: -.4px;
 white-space: nowrap;

img
 transition: all 1s;
 &:hover
  transform: scale(1.05);